{
  "$schema": "http://json.schemastore.org/template",
  "author": "Enis Mulic",
  "classifications": ["Api", "Minimal Api", "Vertical Slice Architecture", "CQRS"],
  "identity": "VerticalSliceMinimalApi",
  "name": "Vertical Slice Minimal Api",
  "shortName": "vsma",
  "sourceName": "ProjectName",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "GitHost": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "Github",
          "description": "Use Github"
        },
        {
          "choice": "AzureDevOps",
          "description": "Use Azure DevOps"
        },
        {
          "choice": "None",
          "description": ""
        }
      ],
      "defaultValue": "None",
      "description": "The type of git host to use"
    },
    "UseGithub": {
      "type": "computed",
      "value": "(GitHost == \"Github\")"
    },
    "UseAzureDevOps": {
      "type": "computed",
      "value": "(GitHost == \"AzureDevOps\")"
    },
    "UseNoGitHost": {
      "type": "computed",
      "value": "(GitHost == \"None\")"
    },
    "Database": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "MSSql",
          "description": "Use Microsoft SQL or Azure SQL"
        },
        {
          "choice": "PostgreSql",
          "description": "Use PostgreSql"
        },
        {
          "choice": "None",
          "description": ""
        }
      ],
      "defaultValue": "None",
      "description": "The type of database to use"
    },
    "UseMSSql": {
      "type": "computed",
      "value": "(Database == \"MSSql\")"
    },
    "UsePostgreSql": {
      "type": "computed",
      "value": "(Database == \"PostgreSql\")"
    },
    "UseDatabase": {
      "type": "computed",
      "value": "(Database != \"None\")"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "modifiers": [
        {
          "condition": "(UseGithub)",
          "exclude": [".azuredevops/**"]
        },
        {
          "condition": "(UseAzureDevOps)",
          "exclude": [".github/**"]
        },
        {
          "condition": "(UseNoGitHost)",
          "exclude": [".azuredevops/**", ".github/**"]
        },
        {
          "condition": "(!UseDatabase)",
          "exclude": [
            "src/Application/Infrastructure/Persistance/**"
          ]
        }
      ]
    }
  ]
}
